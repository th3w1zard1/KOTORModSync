<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KOTORModSync"
        x:Class="KOTORModSync.InformationDialog"
        Title="Information" Width="400" Height="250" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="TitleTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Text="{Binding Title}"
                   Margin="10"/>
        <TextBlock x:Name="InfoTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Margin="10"
                   Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Click="OKButton_Click" MinWidth="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

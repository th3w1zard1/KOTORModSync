<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="KOTORModSync.InformationDialog"
        Title="Information" Width="400" Height="300" WindowStartupLocation="CenterScreen">
    <Grid RowDefinitions="*,*,*">
        <TextBlock x:Name="TitleTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   Text="{Binding Title}"
                   Margin="10"
                   Grid.Row="0" />
        <TextBlock x:Name="InfoTextBlock"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="16"
                   TextWrapping="Wrap"
                   Margin="10"
                   Grid.Row="1" />
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="10">
            <Button Content="OK" Click="OKButton_Click" MinWidth="80" Margin="5" />
        </StackPanel>
    </Grid>
</Window>
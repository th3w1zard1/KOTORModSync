<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:KOTORModSync.Installer.Views"
			 xmlns:vm="clr-namespace:KOTORModSync.Installer.ViewModels;assembly=KOTORModSync.Installer"
			 xmlns:avalonia="clr-namespace:Avalonia.Controls;assembly=Avalonia"
			 x:Class="KOTORModSync.Installer.Views.ConfirmationView"
			 x:DataType="vm:ConfirmationViewModel">
	<UserControl.DataContext>
		<vm:ConfirmationViewModel />
	</UserControl.DataContext>
	<Grid Margin="20">
		<StackPanel>
			<TextBlock Text="Confirm Installation" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
					   Foreground="Black" FontFamily="Tahoma" />

			<TextBlock Text="{Binding ConfirmationMessage}" Margin="0,0,0,10" FontSize="12"
					   Foreground="Black" FontFamily="Tahoma" TextWrapping="Wrap" />

			<StackPanel Orientation="Horizontal">
				<Button Content="Back" Command="{Binding BackCommand}" Width="80" Margin="0,0,10,0"
						FontSize="11" Foreground="Black" FontFamily="Tahoma" />
				<Button Content="Next" Command="{Binding NextCommand}" Width="80" Margin="0,0,10,0"
						FontSize="11" Foreground="Black" FontFamily="Tahoma" />
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:viewModels="clr-namespace:KOTORModSync.Installer.ViewModels;assembly=KOTORModSync.Installer"
			 x:Class="KOTORModSync.Installer.Views.ResultsScreenView" 
			 x:DataType="viewModels:ResultsViewModel">

	<UserControl.DataContext>
		<viewModels:ResultsViewModel/>
	</UserControl.DataContext>

	<Grid>
		<TextBlock Text="{Binding ResultsText}" Margin="10"/>
		<Button Content="Finish" Command="{Binding FinishCommand}" Margin="10" HorizontalAlignment="Right"/>
	</Grid>
</UserControl>